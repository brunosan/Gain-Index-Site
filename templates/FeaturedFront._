<h3>Featured Countries</h3>
<div class='featured'>
  <% _.each(countries, function(summary) { %>
      <div class='stats clearfix'>
    <div class='country-summary'>
      <h3><%= summary.name %></h3>
      <div class='description <%= summary.nameLower %>'>
        <!-- Country description -->
      </div>
        <% _.each(summary.countryInfo, function(stat, klass) { %>
          <div class='<%= klass %>'>
            <%= stat.name %>
            <%= stat.value %>
          </div>
          <% if (stat.name == 'gain') { %>
            <div class='chart'>
        <div class='matrix'>
          <div class='quad tl'></div>
          <div class='quad tr'></div>
          <div class='quad br'></div>
          <div class='quad bl'></div>
          <div class='pin' style='top: <%= summary.pin.y %>px; left: <%= summary.pin.x %>px;'></div>
        </div>
          <% } %>
        <% }); %>
      </div>
            </div>
    </div>
  <% }); %>
</div>
