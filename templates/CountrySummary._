<div class='stats'>
<% _.each(summary, function(stat, klass) { %>
  <div class='<%= klass %>'>
      <span class='name'><%= stat.name %></span>
      <span class='value'><%= stat.value %></span>
      <% if (stat.outlook) { %>
        <div class='outlook'>Future Outlook:
           <div class='icon-outlook icon-outlook-<%= stat.outlook %>'></div>
        </div>
      <% } %>
  </div>
<% }); %>
</div>
<div class='chart'>
  <div class='mini-matrix'>
    <div class='quad tl'></div>
    <div class='quad tr'></div>
    <div class='quad br'></div>
    <div class='quad bl'></div>
    <div class='pin' style='top: <%= pin.y %>px; left: <%= pin.x %>px;'></div>
  </div>
</div>
<% if (map) { %><div class='map'></div><% } %>
