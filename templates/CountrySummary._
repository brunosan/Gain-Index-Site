<div class='gain'>
    <span class='name'><%= data.gain.name %></span>
    <span class='value'><%= data.gain.value %></span>
    <% if (data.gain.outlook) { %>
      <div class='outlook'>Outlook:
         <div class='icon-outlook icon-outlook-<%= data.gain.outlook %>'></div>
      </div>
    <% } %>
</div>
<div class='chart'>
  <div class='mini-matrix'>
    <div class='quad tl'></div>
    <div class='quad tr'></div>
    <div class='quad br'></div>
    <div class='quad bl'></div>
    <div class='pin' style='top: <%= pin.y %>px; left: <%= pin.x %>px;'></div>
  </div>
<% _.each(['vulnerability', 'readiness'], function(stat) { %>
  <div class='<%= stat%>'>
      <span class='name'><%= data[stat].name %></span>
      <span class='value'><%= data[stat].value %></span>
  </div>
<% }); %>
</div>
<% if (map) { %><div class='map'></div><% } %>
